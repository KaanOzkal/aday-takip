                    </div>

                    <div id="sec-references" class="section-card">
                        <div class="section-header"><div class="section-icon"><i class="fas fa-handshake"></i></div><h5 class="fw-bold m-0">Referanslar</h5></div>
                        <div class="row g-3">
                            <div class="col-md-6"><div class="form-floating"><input type="text" name="reference1_name" class="form-control" value="<%= user.cvDetails?.reference1_name %>"><label>Ad Soyad</label></div></div>
                            <div class="col-md-6"><div class="form-floating"><input type="text" name="reference1_company" class="form-control" value="<%= user.cvDetails?.reference1_company %>"><label>Şirket</label></div></div>
                            <div class="col-md-6"><div class="form-floating"><input type="text" name="reference1_position" class="form-control" value="<%= user.cvDetails?.reference1_position %>"><label>Pozisyon</label></div></div>
                            <div class="col-md-6"><div class="form-floating"><input type="text" name="reference1_contact" class="form-control" value="<%= user.cvDetails?.reference1_contact %>"><label>İletişim (Tel/Email)</label></div></div>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>

    <div class="action-bar">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-6 d-none d-md-block text-muted small">
                    <i class="fas fa-info-circle me-1"></i> Tüm değişiklikler taslak olarak saklanır.
                </div>
                <div class="col-md-6 d-flex gap-3 justify-content-end">
                    <a href="/cv-print" target="_blank" class="btn btn-outline-dark fw-bold px-4 rounded-pill">
                        <i class="fas fa-eye me-2"></i> Önizle
                    </a>
                    <button type="button" onclick="submitForm()" class="btn btn-primary fw-bold px-5 rounded-pill shadow">
                        <i class="fas fa-save me-2"></i> KAYDET
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Renk Seçme Mantığı
        function selectColor(el, color) {
            document.querySelectorAll('.color-option').forEach(c => c.classList.remove('active'));
            el.classList.add('active');
            document.getElementById('cvColorInput').value = color;
            document.documentElement.style.setProperty('--primary', color);
        }

        function selectCustomColor(color) {
            document.getElementById('cvColorInput').value = color;
            document.documentElement.style.setProperty('--primary', color);
        }

        // Resim Önizleme
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('previewImg').src = e.target.result;
                    document.getElementById('previewImg').classList.remove('d-none');
                    const ph = document.getElementById('uploadPlaceholder');
                    if(ph) ph.classList.add('d-none');
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        // Form Gönderme ve SweetAlert
        function submitForm() {
            Swal.fire({
                title: 'Kaydediliyor...',
                text: 'Lütfen bekleyin',
                didOpen: () => Swal.showLoading(),
                showConfirmButton: false,
                background: '#fff'
            });
            document.getElementById('mainForm').submit();
        }

        // URL parametresi ile başarı mesajı
        const urlParams = new URLSearchParams(window.location.search);
        if(urlParams.get('status') === 'saved'){
            Swal.fire({
                icon: 'success', title: 'Başarılı!', text: 'CV başarıyla kaydedildi.',
                timer: 1500, showConfirmButton: false, position: 'top-end', toast: true
            });
            window.history.replaceState(null, null, window.location.pathname);
        }

        // --- DİNAMİK ALAN EKLEME FONKSİYONLARI ---
        
        function addExperienceField() {
            // Son deneyim kartını bul (butonun hemen öncesi)
            const container = document.querySelector('#sec-experience');
            const btn = container.querySelector('button.w-100'); // Ekleme butonu
            
            const div = document.createElement('div');
            div.className = 'experience-card mt-3 animate__animated animate__fadeIn';
            div.innerHTML = `
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="fw-bold mb-0 text-muted">Ek İş Deneyimi</h6>
                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="this.closest('.experience-card').remove()"><i class="fas fa-trash"></i></button>
                </div>
                <div class="row g-3">
                    <div class="col-md-6"><input type="text" name="exp_additional_title[]" class="form-control" placeholder="Pozisyon"></div>
                    <div class="col-md-6"><input type="text" name="exp_additional_company[]" class="form-control" placeholder="Şirket"></div>
                    <div class="col-md-6"><input type="text" name="exp_additional_date[]" class="form-control" placeholder="Tarih"></div>
                    <div class="col-md-6"><input type="text" name="exp_additional_location[]" class="form-control" placeholder="Konum"></div>
                    <div class="col-12"><textarea name="exp_additional_desc[]" class="form-control" rows="2" placeholder="Görevler"></textarea></div>
                </div>
            `;
            container.insertBefore(div, btn);
        }

        function addEducationField() {
            const container = document.querySelector('#sec-education');
            const btn = container.querySelector('button.w-100');
            
            const div = document.createElement('div');
            div.className = 'experience-card mt-3 animate__animated animate__fadeIn';
            div.innerHTML = `
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="fw-bold mb-0 text-muted">Ek Eğitim</h6>
                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="this.closest('.experience-card').remove()"><i class="fas fa-trash"></i></button>
                </div>
                <div class="row g-3">
                    <div class="col-md-6"><input type="text" name="edu_additional_school[]" class="form-control" placeholder="Okul"></div>
                    <div class="col-md-6"><input type="text" name="edu_additional_degree[]" class="form-control" placeholder="Bölüm"></div>
                    <div class="col-md-6"><input type="text" name="edu_additional_date[]" class="form-control" placeholder="Tarih"></div>
                    <div class="col-md-6"><input type="text" name="edu_additional_location[]" class="form-control" placeholder="Konum"></div>
                </div>
            `;
            container.insertBefore(div, btn);
        }

        function addCertificateField() {
            const container = document.querySelector('#sec-certificates');
            const btn = container.querySelector('button.w-100');
            
            const div = document.createElement('div');
            div.className = 'experience-card mt-3 animate__animated animate__fadeIn';
            div.innerHTML = `
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h6 class="fw-bold mb-0 text-muted">Ek Sertifika</h6>
                    <button type="button" class="btn btn-sm btn-outline-danger" onclick="this.closest('.experience-card').remove()"><i class="fas fa-trash"></i></button>
                </div>
                <div class="row g-3">
                    <div class="col-md-6"><input type="text" name="cert_additional_name[]" class="form-control" placeholder="Sertifika Adı"></div>
                    <div class="col-md-6"><input type="text" name="cert_additional_issuer[]" class="form-control" placeholder="Kurum"></div>
                    <div class="col-md-6"><input type="text" name="cert_additional_date[]" class="form-control" placeholder="Tarih"></div>
                    <div class="col-md-6"><input type="text" name="cert_additional_validity[]" class="form-control" placeholder="Geçerlilik"></div>
                </div>
            `;
            container.insertBefore(div, btn);
        }

        // İlerleme Çubuğu ve Karakter Sayacı
        document.addEventListener('input', function() {
            const inputs = document.querySelectorAll('input, textarea, select');
            let filled = 0;
            inputs.forEach(i => { if(i.value.length > 0) filled++; });
            const progress = Math.min(100, (filled / 20) * 100); // 20 zorunlu alan varsayımı
            document.getElementById('progressBar').style.width = progress + '%';
        });

        document.getElementById('summaryTextarea').addEventListener('input', function() {
            document.getElementById('summaryCounter').innerText = this.value.length + " Karakter";
        });
    </script>
</body>
</html>