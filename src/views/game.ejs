<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Almanya Arcade | Kariyer</title>
    
    <link href="https://fonts.googleapis.com/css2?family=DIN+Alternate:wght@700&family=Plus+Jakarta+Sans:wght@400;600;800&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <style>
        :root {
            --de-black: #1a1a1a;
            --de-red: #DD0000;
            --de-gold: #FFCE00;
            --autobahn-blue: #003399; /* Otoban tabela mavisi */
        }

        body {
            background-color: #f0f2f5;
            font-family: 'Plus Jakarta Sans', sans-serif;
            margin: 0; overflow: hidden; user-select: none;
        }

        /* --- ORTAK UI --- */
        .hidden { display: none !important; }
        .fade-in { animation: fadeIn 0.5s ease-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }

        /* Geri D√∂n Butonu (Otoban Tabelasƒ± Stili) */
        .exit-btn {
            position: fixed; top: 20px; left: 20px; z-index: 9999;
            background: var(--autobahn-blue); color: white; border: 2px solid white;
            padding: 8px 20px; border-radius: 4px; cursor: pointer;
            font-family: 'DIN Alternate', sans-serif; font-size: 1.1rem;
            box-shadow: 0 4px 6px rgba(0,0,0,0.3); transition: 0.2s;
            display: flex; align-items: center; gap: 10px;
        }
        .exit-btn:hover { transform: translateY(-2px); }
        .exit-icon { background: white; color: var(--autobahn-blue); width: 20px; height: 20px; border-radius: 50%; display: flex; align-items: center; justify-content: center; font-size: 0.8rem; }

        /* --- ANA MEN√ú (HUB) --- */
        .arcade-hub {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: linear-gradient(to bottom, #e2e8f0 0%, #cbd5e1 100%);
            display: flex; flex-direction: column; align-items: center; justify-content: center;
            padding: 20px; overflow-y: auto;
        }

        /* Berlin Sil√ºeti Arka Planƒ± */
        .berlin-bg {
            position: absolute; bottom: 0; left: 0; width: 100%; height: 300px;
            background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 300" preserveAspectRatio="none"><path fill="%2394a3b8" fill-opacity="0.3" d="M0,300 L0,250 L50,250 L50,180 L80,150 L110,180 L110,250 L150,250 L150,100 L170,80 L190,100 L190,250 L250,250 L250,50 L260,20 L270,50 L270,250 L350,250 L350,200 L400,200 L400,300 Z M450,300 L450,220 L500,180 L550,220 L550,300 Z M600,300 L600,150 L650,120 L700,150 L700,300 Z M800,300 L800,240 L1200,240 L1200,300 Z"/></svg>');
            background-repeat: repeat-x; background-size: 1200px 300px; z-index: 0;
        }

        .hub-header { text-align: center; margin-bottom: 40px; z-index: 2; position: relative; }
        
        .hub-title { 
            font-family: 'DIN Alternate', sans-serif; font-size: 4rem; margin: 0; 
            text-transform: uppercase; letter-spacing: 2px; color: var(--de-black);
            display: flex; flex-direction: column; align-items: center;
        }
        /* Almanya Bayraƒüƒ± √áizgisi */
        .flag-line {
            height: 8px; width: 100%; display: flex; margin-top: 5px; border-radius: 4px; overflow: hidden;
        }
        .flag-line div { flex: 1; height: 100%; }
        
        .game-grid {
            display: grid; grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
            gap: 30px; width: 100%; max-width: 1100px; z-index: 2;
        }

        .game-card {
            background: white; border-radius: 12px; padding: 0;
            box-shadow: 0 10px 20px rgba(0,0,0,0.05); cursor: pointer;
            transition: all 0.3s; overflow: hidden; border-bottom: 4px solid var(--de-gold);
            display: flex; flex-direction: column; align-items: center;
        }
        .game-card:hover { transform: translateY(-8px); box-shadow: 0 15px 30px rgba(0,0,0,0.1); }
        
        .card-img {
            width: 100%; height: 120px; display: flex; align-items: center; justify-content: center;
            font-size: 4rem; background: #f8fafc; border-bottom: 1px solid #e2e8f0;
        }
        .card-body { padding: 20px; text-align: center; }
        .card-title { font-weight: 800; color: var(--de-black); font-size: 1.2rem; margin-bottom: 5px; }
        .card-city { font-size: 0.8rem; color: #64748b; text-transform: uppercase; letter-spacing: 1px; font-weight: 700; margin-bottom: 10px; }
        .play-badge {
            background: var(--de-red); color: white; padding: 5px 20px; border-radius: 30px;
            font-size: 0.8rem; font-weight: bold; text-transform: uppercase;
        }

        /* --- OYUN ALANLARI --- */
        .game-container {
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background: #fff; z-index: 100;
        }

        /* --- OYUN 1: HAMBURG Lƒ∞MANI (STACK) --- */
        #game-stack { background: linear-gradient(#bae6fd, #f0f9ff); }
        .crane-top { position: absolute; top: 0; width: 100%; height: 50px; background: #333; z-index: 5; }
        .stack-score {
            position: absolute; top: 80px; width: 100%; text-align: center;
            font-size: 5rem; font-weight: 900; color: rgba(0,0,0,0.1); pointer-events: none;
        }

        /* --- OYUN 2: M√úNƒ∞H HAFIZASI (MEMORY) --- */
        #game-memory { background: #374151; display: flex; flex-direction: column; align-items: center; justify-content: center; }
        #memory-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 10px; }
        .mem-card {
            width: 70px; height: 70px; background: white; border-radius: 8px; cursor: pointer;
            position: relative; transform-style: preserve-3d; transition: transform 0.4s;
        }
        .mem-card.flipped { transform: rotateY(180deg); }
        .mem-face {
            position: absolute; width: 100%; height: 100%; backface-visibility: hidden;
            display: flex; align-items: center; justify-content: center; border-radius: 8px; font-size: 2rem;
        }
        .mem-front { background: var(--de-black); border: 2px solid var(--de-gold); color: white; font-size: 1.5rem; }
        .mem-back { background: white; transform: rotateY(180deg); border: 2px solid var(--de-red); }

        /* --- OYUN 3: BERLƒ∞N Vƒ∞ZE AVI (CATCHER) --- */
        #game-catcher { background: linear-gradient(#1e293b, #0f172a); }
        .catcher-hud {
            position: absolute; top: 20px; right: 20px; background: white;
            padding: 5px 15px; border-radius: 4px; font-weight: bold; border-left: 5px solid var(--de-gold);
        }

        /* --- GAME OVER --- */
        .modal-overlay {
            position: absolute; top: 0; left: 0; width: 100%; height: 100%;
            background: rgba(0,0,0,0.8); z-index: 200; display: flex;
            align-items: center; justify-content: center; backdrop-filter: blur(5px);
        }
        .modal-box {
            background: white; padding: 40px; border-radius: 16px; text-align: center;
            border-top: 8px solid var(--de-red); max-width: 90%; width: 350px;
        }
        .btn-de {
            background: var(--de-black); color: white; border: none; padding: 12px 30px;
            border-radius: 4px; font-weight: bold; cursor: pointer; width: 100%; margin-top: 15px;
        }
        .btn-de:hover { background: #333; }

    </style>
</head>
<body>

    <div id="gameHub" class="arcade-hub fade-in">
        <div class="berlin-bg"></div>
        
        <a href="/panel" class="exit-btn" style="top:30px; left:30px; background:white; color:#333; border:1px solid #ccc;">
            <i class="fas fa-arrow-left"></i> Panele D√∂n
        </a>

        <div class="hub-header">
            <h1 class="hub-title">
                ALMANYA ARCADE
                <div class="flag-line">
                    <div style="background:var(--de-black)"></div>
                    <div style="background:var(--de-red)"></div>
                    <div style="background:var(--de-gold)"></div>
                </div>
            </h1>
            <p class="text-muted mt-2">S√ºrece kƒ±sa bir mola ver, eƒülenceye katƒ±l!</p>
        </div>

        <div class="game-grid">
            <div class="game-card" onclick="launchGame('stack')">
                <div class="card-img">üèóÔ∏è</div>
                <div class="card-body">
                    <div class="card-city">HAMBURG</div>
                    <div class="card-title">Liman Kule</div>
                    <div class="play-badge">Oyna</div>
                </div>
            </div>

            <div class="game-card" onclick="launchGame('memory')">
                <div class="card-img">ü•®</div>
                <div class="card-body">
                    <div class="card-city">M√úNƒ∞H</div>
                    <div class="card-title">K√ºlt√ºr Hafƒ±zasƒ±</div>
                    <div class="play-badge">Oyna</div>
                </div>
            </div>

            <div class="game-card" onclick="launchGame('catcher')">
                <div class="card-img">üõÇ</div>
                <div class="card-body">
                    <div class="card-city">BERLƒ∞N</div>
                    <div class="card-title">Vize Avcƒ±sƒ±</div>
                    <div class="play-badge">Oyna</div>
                </div>
            </div>

            <div class="game-card" onclick="launchGame('puzzle')">
                <div class="card-img">üß©</div>
                <div class="card-body">
                    <div class="card-city">FRANKFURT</div>
                    <div class="card-title">ƒ∞≈ü Puzzle</div>
                    <div class="play-badge">Oyna</div>
                </div>
            </div>
        </div>
    </div>

    <button id="exitBtn" class="exit-btn hidden" onclick="exitToHub()">
        <span class="exit-icon"><i class="fas fa-arrow-left"></i></span> √áIKI≈û
    </button>

    <div id="game-stack" class="game-container hidden">
        <canvas id="stack-canvas"></canvas>
        <div class="stack-score" id="stack-score">0</div>
        <div style="position: absolute; bottom: 50px; width: 100%; text-align: center; color: #003399; font-weight: bold; font-family: 'DIN Alternate';">
            HAMBURG Lƒ∞MANI<br><small style="font-family:sans-serif">TIKLA veya SPACE</small>
        </div>
    </div>

    <div id="game-memory" class="game-container hidden">
        <h2 class="text-white mb-4 fw-bold">E≈ûLE≈ûMELERƒ∞ BUL</h2>
        <div id="memory-grid"></div>
    </div>

    <div id="game-catcher" class="game-container hidden">
        <canvas id="catcher-canvas"></canvas>
        <div class="catcher-hud">Vƒ∞ZE PUANI: <span id="catcher-score">0</span></div>
        <div style="position: absolute; bottom: 20px; width: 100%; text-align: center; color: rgba(255,255,255,0.5);">
            S√ºr√ºkle veya Dokun
        </div>
    </div>

    <div id="game-puzzle" class="game-container hidden" style="background: #f1f5f9; display: flex; flex-direction: column; align-items: center; justify-content: center;">
        <h3 class="text-dark fw-bold mb-3">FRANKFURT MERKEZ</h3>
        <div class="d-flex gap-4 mb-3 fw-bold">
            <span class="text-primary">Skor: <span id="puz-score">0</span></span>
            <span class="text-danger">Hamle: <span id="puz-moves">15</span></span>
        </div>
        <div id="puzzle-grid" style="display: grid; grid-template-columns: repeat(5, 60px); gap: 5px; background: #cbd5e1; padding: 10px; border-radius: 8px;"></div>
        <button class="btn btn-dark rounded-pill mt-4 px-4" onclick="initPuzzle()">Yenile</button>
    </div>

    <div id="gameOverModal" class="modal-overlay hidden">
        <div class="modal-box">
            <h2 class="fw-bold" style="color:var(--de-black)">OYUN Bƒ∞TTƒ∞</h2>
            <p class="text-muted">Toplam Skor</p>
            <h1 class="display-4 fw-bold text-primary mb-4" id="finalScore">0</h1>
            <button class="btn-de" onclick="restartCurrentGame()">TEKRAR OYNA</button>
            <div class="mt-3 text-muted small cursor-pointer" onclick="exitToHub()" style="cursor:pointer">Men√ºye D√∂n</div>
        </div>
    </div>

    <script>
        let currentGame = null;
        let animId = null;
        let gameInterval = null;

        // --- Y√ñNETƒ∞M ---
        function launchGame(id) {
            document.getElementById('gameHub').classList.add('hidden');
            document.getElementById('exitBtn').classList.remove('hidden');
            document.querySelectorAll('.game-container').forEach(e => e.classList.add('hidden'));
            document.getElementById('gameOverModal').classList.add('hidden');
            
            document.getElementById(`game-${id}`).classList.remove('hidden');
            currentGame = id;

            if(id === 'stack') initStack();
            if(id === 'memory') initMemory();
            if(id === 'catcher') initCatcher();
            if(id === 'puzzle') initPuzzle();
        }

        function exitToHub() {
            stopGameLoops();
            document.getElementById('gameHub').classList.remove('hidden');
            document.getElementById('exitBtn').classList.add('hidden');
            document.querySelectorAll('.game-container').forEach(e => e.classList.add('hidden'));
            document.getElementById('gameOverModal').classList.add('hidden');
            currentGame = null;
        }

        function showGameOver(score) {
            stopGameLoops();
            document.getElementById('finalScore').innerText = score;
            document.getElementById('gameOverModal').classList.remove('hidden');
        }

        function restartCurrentGame() {
            launchGame(currentGame);
        }

        function stopGameLoops() {
            cancelAnimationFrame(animId);
            clearInterval(gameInterval);
        }

        // --- OYUN 1: HAMBURG KULE (KONTEYNER) ---
        function initStack() {
            const canvas = document.getElementById('stack-canvas');
            const ctx = canvas.getContext('2d');
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;

            let stack = [];
            // Zemin (Gemi G√ºvertesi gibi)
            stack.push({ x: (canvas.width-200)/2, y: canvas.height-50, w: 200, h: 50, color: '#333' });
            
            let current = { x: 0, y: canvas.height-100, w: 200, h: 50, dir: 1, speed: 8, color: '#dd0000' };
            let score = 0;
            document.getElementById('stack-score').innerText = score;

            function draw() {
                ctx.clearRect(0,0,canvas.width, canvas.height);
                
                // Vin√ß ipi
                ctx.beginPath();
                ctx.moveTo(current.x + current.w/2, 0);
                ctx.lineTo(current.x + current.w/2, current.y);
                ctx.strokeStyle = "rgba(0,0,0,0.2)";
                ctx.stroke();

                stack.forEach(b => {
                    ctx.fillStyle = b.color;
                    ctx.fillRect(b.x, b.y, b.w, b.h);
                    // Konteyner √ßizgileri
                    ctx.strokeStyle = "rgba(255,255,255,0.2)";
                    ctx.strokeRect(b.x, b.y, b.w, b.h);
                });

                ctx.fillStyle = current.color;
                ctx.fillRect(current.x, current.y, current.w, current.h);
                
                current.x += current.speed * current.dir;
                if(current.x + current.w > canvas.width || current.x < 0) current.dir *= -1;

                animId = requestAnimationFrame(draw);
            }
            draw();

            const place = (e) => {
                if(e.type === 'touchstart') e.preventDefault();
                const prev = stack[stack.length-1];
                const dist = current.x - prev.x;
                const overlap = current.w - Math.abs(dist);

                if(overlap > 0) {
                    score++;
                    document.getElementById('stack-score').innerText = score;
                    const newX = prev.x + (dist > 0 ? dist : 0);
                    stack.push({ x: newX, y: current.y, w: overlap, h: current.h, color: current.color });
                    
                    // Renk deƒüi≈üimi (Alman Bayraƒüƒ± D√∂ng√ºs√º)
                    const colors = ['#000000', '#DD0000', '#FFCE00'];
                    current.color = colors[score % 3];
                    
                    current.y -= 50;
                    current.w = overlap;
                    current.x = 0;
                    current.speed += 0.5;

                    if(current.y < 150) {
                        stack.forEach(b => b.y += 50);
                        current.y += 50;
                    }
                } else {
                    showGameOver(score);
                }
            };
            window.onkeydown = (e) => { if(e.code === 'Space') place(e); };
            canvas.onmousedown = place;
            canvas.ontouchstart = place;
        }

        // --- OYUN 2: M√úNƒ∞H HAFIZA (KARTLAR) ---
        function initMemory() {
            const grid = document.getElementById('memory-grid');
            grid.innerHTML = '';
            // Alman ƒ∞konlarƒ±
            const icons = ['ü•®', 'üç∫', 'üè∞', '‚öΩ', 'üöó', 'üèîÔ∏è', 'üå≠', 'üå≤'];
            const cards = [...icons, ...icons].sort(() => 0.5 - Math.random());
            
            let flipped = [];
            let matched = 0;

            cards.forEach(icon => {
                const el = document.createElement('div');
                el.className = 'mem-card';
                el.innerHTML = `<div class="mem-face mem-front"><i class="fas fa-gem"></i></div><div class="mem-face mem-back">${icon}</div>`;
                el.onclick = () => {
                    if (flipped.length < 2 && !el.classList.contains('flipped')) {
                        el.classList.add('flipped');
                        flipped.push(el);
                        if (flipped.length === 2) {
                            setTimeout(() => {
                                const [c1, c2] = flipped;
                                if(c1.querySelector('.mem-back').innerText === c2.querySelector('.mem-back').innerText) {
                                    matched++;
                                    if(matched === icons.length) showGameOver(100);
                                } else {
                                    c1.classList.remove('flipped');
                                    c2.classList.remove('flipped');
                                }
                                flipped = [];
                            }, 800);
                        }
                    }
                };
                grid.appendChild(el);
            });
        }

        // --- OYUN 3: BERLƒ∞N Vƒ∞ZE AVI (YAƒûMUR) ---
        function initCatcher() {
            const canvas = document.getElementById('catcher-canvas');
            const ctx = canvas.getContext('2d');
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;

            let player = { x: canvas.width/2, w: 60, h: 40 };
            let items = [];
            let score = 0;
            document.getElementById('catcher-score').innerText = score;

            const move = (e) => {
                const cx = e.touches ? e.touches[0].clientX : e.clientX;
                player.x = cx - player.w/2;
            };
            window.addEventListener('mousemove', move);
            window.addEventListener('touchmove', move);

            gameInterval = setInterval(() => {
                const types = [
                    { t: 'good', i: 'üõÇ', v: 10 }, { t: 'good', i: 'üí∂', v: 5 }, { t: 'good', i: '‚úàÔ∏è', v: 15 },
                    { t: 'bad', i: '‚õî', v: 0 }, { t: 'bad', i: '‚õàÔ∏è', v: 0 }
                ];
                const item = types[Math.floor(Math.random() * types.length)];
                items.push({ x: Math.random() * (canvas.width - 40), y: -50, ...item });
            }, 800);

            function update() {
                ctx.clearRect(0,0,canvas.width,canvas.height);
                
                // Oyuncu (√áanta)
                ctx.font = "40px Arial";
                ctx.fillText("üíº", player.x, canvas.height - 50);

                items.forEach((item, i) => {
                    item.y += 4;
                    ctx.fillText(item.i, item.x, item.y);

                    // √áarpƒ±≈üma
                    if(item.y > canvas.height - 80 && item.y < canvas.height - 20 &&
                       item.x > player.x - 20 && item.x < player.x + 60) {
                        
                        if(item.t === 'good') score += item.v;
                        else { showGameOver(score); return; }
                        
                        document.getElementById('catcher-score').innerText = score;
                        items.splice(i, 1);
                    }
                });
                animId = requestAnimationFrame(update);
            }
            update();
        }

        // --- OYUN 4: FRANKFURT PUZZLE ---
        function initPuzzle() {
            const grid = document.getElementById('puzzle-grid');
            grid.innerHTML = '';
            const icons = ['üè¢', 'üí∂', '‚úàÔ∏è', 'üìà', 'üñäÔ∏è'];
            let moves = 15;
            let score = 0;
            
            document.getElementById('puz-score').innerText = score;
            document.getElementById('puz-moves').innerText = moves;

            for(let i=0; i<25; i++) { // 5x5 Grid
                const el = document.createElement('div');
                el.innerText = icons[Math.floor(Math.random()*icons.length)];
                el.style.cssText = "background:white; font-size:1.5rem; display:flex; align-items:center; justify-content:center; border-radius:4px; height:60px; cursor:pointer;";
                el.onclick = () => {
                    if(moves <= 0) return;
                    el.innerText = icons[Math.floor(Math.random()*icons.length)];
                    score += 10;
                    moves--;
                    document.getElementById('puz-score').innerText = score;
                    document.getElementById('puz-moves').innerText = moves;
                    if(moves === 0) showGameOver(score);
                };
                grid.appendChild(el);
            }
        }

        window.addEventListener('resize', () => {
            const c = document.querySelectorAll('canvas');
            c.forEach(ca => { ca.width = window.innerWidth; ca.height = window.innerHeight; });
        });

    </script>
</body>
